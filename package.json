{
  "name": "sqrly",
  "version": "1.0.5",
  "description": "Keep SQL files in your source tree and sync them to your Hasura-managed database",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:dev": "nodemon",
    "build": "tsc -p .",
    "prepublish": "tsc"
  },
  "main": "dist/index.ts",
  "bin": "dist/index.js",
  "types": "dist/index.d.ts",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "repository": "https://github.com/jasonprado/sqrly",
  "author": "Jason Prado",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "^16.11.6",
    "@types/pg": "^8.6.1",
    "@types/yargs": "^17.0.4",
    "nodemon": "^2.0.14",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "await-exec": "^0.1.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "pg": "^8.7.1",
    "simple-git": "^2.47.0",
    "tmp-promise": "^3.0.3",
    "yargs": "^17.2.1"
  }
}
